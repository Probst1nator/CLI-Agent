# CLI-Agent Environment Configuration
# Copy this file to .env and fill in your actual API keys

# === AI Provider API Keys ===
# Get these from the respective providers' websites

# OpenAI API (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (for Claude models) 
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API (for Gemini models)
GEMINI_API_KEY=your_google_gemini_api_key_here

# Groq API (for fast inference)
GROQ_API_KEY=your_groq_api_key_here

# NVIDIA API (for NVIDIA models)
NVIDIA_API_KEY=your_nvidia_api_key_here

# === Search API Keys ===
# Brave Search API (for web searches)
BRAVE_API_KEY=your_brave_search_api_key_here

# === Optional Configuration ===
# Ollama hosts (comma-separated, default: localhost)
OLLAMA_HOSTS=localhost:11434

# Force local mode (set to 'true' to use only local models)
FORCE_LOCAL=false

# Debug mode (set to 'true' for verbose logging)
DEBUG=false